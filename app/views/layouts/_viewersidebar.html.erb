
    <div class="col-sm-12 pt-0">
  
        <% if user_signed_in? %>
          <% if current_user.id == @user.id %>
             <h1 class=" text-center maroon" id="profileName" style="font-size: 1.5em"> <%= "Donations & Rewards" %> </h1>
        
          <% else %>
            <h1 class="text-center maroon" id="profileName" style="font-size: 1.5em"> <%= "Support" %> <%= @user.name %> </h1>
          <% end %>
        <% else %>
          <h1 class="text-center maroon" id="profileName" style="font-size: 1.5em"> <%= "Support" %> <%= @user.name %> </h1>
        <% end %>
  
    </div>

    <div class="pl-1" id="merchSidebar">
      <% if !@user.stripeid.present? && @user.id != 143 %>
        <div class="text-center" style="font-family: Helvetica;">
            <%= @user.name %> is not selling merchandise or acception donations yet.
        </div>
        <br />
      <% end %>
  
      <% if @sidebarmerchandise.present? %>
        <% @sidebarmerchandise.each do |merch| %>
        
        <div class="media">
            <div class="mr-2">

                <% if merch.itempic.present? %>
                    <%= image_tag merch.itempic.url.to_s, class: "media-object", style: "height:70px; width:70px;"%>
                <% else %>
                    <%= image_tag "logoDigitalHollow300.png", class: "media-object", style: "height:70px; width:70px;" %>
                <% end %>
            </div>

            <div class="mr-2" style="font-family: Helvetica; text-align: left;">

                <div style="font-size: 20px; font-family: Helvetica;">
                    <%= link_to(merch.name, merchandise_path(merch.id, :groupid => params[:groupid]) ) %>
                </div>

                <% if merch.desc.present? %>
                    <% if merch.desc.length > 30 %>
                    <div style="font-size: 13px; font-family: Helvetica;">
                        <%= truncate(merch.desc, length: 30) %>
                        <%= link_to 'more', '', class: "read-more-#{merch.id}" %>
                        <script>$('.read-more-<%= merch.id %>').on('click', function (e) {
                                e.preventDefault()
                                $(this).parent().html('<%= escape_javascript merch.desc %>')
                            })</script>
                    </div>
                    <% else %>
                        <div style="font-size: 13px; font-family: Helvetica;">
                            <%= merch.desc %>
                        </div>
                    <% end %>
                <% end %>
                <% if user_signed_in? %>
                    <% if current_user.id == @user.id %>
                    <!--Links to seperate edit Reward page-->
                        <%= button_to "Edit Reward", edit_merchandise_path(merch.id), method: :get, class: "btn btn-warning text-black", :target => "_blank", :style=> "font-size: 0.8em; padding: 2px; width: 80px;" %>
                    <% end %>
                <% end %>

                <% if merch.deadline != nil %>
                <% daysaway = (merch.deadline.to_date - Date.today.to_date).to_i %>
                <b>
                    <% if daysaway == 0 %>
                    <td>Last day available!</td>
                    <% elsif (daysaway <= 7 ) %>
                    <td>Only <%= ActionController::Base.helpers.pluralize(daysaway.to_s, 'day') %> left until it's gone!</td>
                    <% end %>
                </b>
                <% end %>
            </div>
            <div class="media-body" style="font-family: Helvetica; text-align: right;">
                <% if (merch.buttontype) == 'Donate' %>
                    <% buyPrice = ("Donate") %>
                <% else %>
                    <% buyPrice = ("Buy") %>
                <% end %>

                <% if @user.stripeid.present? || @user.id == 143 %>
                    <%= link_to buyPrice, new_purchase_path(:merchandise_id => merch.id), method: :get, :class => "btn btn-warning text-black", :target => "_blank", :style=> "font-size: 1.0em; padding: 10px; width: 70px;" %>
                <% end %>
            </div>

        </div>
          <hr>

          <% end #foreach sidebar merch %>
        <% else %>
        <!--This is where the Default Donate button are displayed-->
        <!--To add or modify Default Donation buttons and prices, it should be done through the code below only-->
            <% if @user.stripeid.present? || @user.id == 1337 || @user.id == 1345 %>

                <div class="text-center" style="font-family: Helvetica;">
                    <% btnTxt = ("Donate $" + sprintf('%.2f',25) + "!") %>
                    <%= link_to btnTxt, new_purchase_path(:pricesold => 25.0, :author_id => @user.id), method: :get, :class => "btn btn-warning btn-lg", :style=> "width: 170px; padding: 5px;", :target => "_blank" %>
                    
                </div>
                <br />
                <div class="text-center" style=" font-family: Helvetica;">
                    <% btnTxt = ("Donate $" + sprintf('%.2f',50) + "!") %>
                    <%= link_to btnTxt, new_purchase_path(:pricesold => 50, :author_id => @user.id), method: :get, :class => "btn btn-warning btn-lg", :style=> "width: 170px; padding: 5px;", :target => "_blank" %>
                    
                </div>
                <br />
                <div class="text-center" style=" font-family: Helvetica;">
                    <% btnTxt = ("Donate $" + sprintf('%.2f',100) + "!") %>
                    <%= link_to btnTxt, new_purchase_path(:pricesold => 100, :author_id => @user.id), method: :get, :class => "btn btn-warning btn-lg", :style=> "width: 170px; padding: 5px;", :target => "_blank" %>
                    
                </div>
                <br />
            <% end %>
        <% end %>
    </div>


