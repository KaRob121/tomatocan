<!--This partial contains two panels unlike the other panel partials because I don't think they'll ever be seperated, but I want them split to save vertical space.-->


<div class="container-fluid">
    <%= render 'layouts/flash_messages' %>
</div>

<div class="col-lg-12 px-5 my-5">
    <%= form_for @user, :html => {:multipart => true} do |f| %>
    <div>

        <div class="row">


            <!-- Profile Picture -->
            <div class="col-md-6">
                <div class="form-group">
                    <h2><small><b><%=f.label :name, "Profile Image" %></b></small></h2>
                    <% if @user.profilepic.present? && @user.profilepic != '' %>
                        <%= image_tag(@user.profilepic.url.to_s, :class => "img-circle", :height => "150", :width => "150") %>
                    <% else %>
                        <%= image_tag "logoDigitalHollow300.png", :height => "150", :width => "150" %> <br>
                    <% end %>

                    <%= f.file_field :profilepic, :class => "pt-4" %>
                    <p class="help-block"><small>150px * 150px is best</small></p>
                </div>
            </div>

            <!-- Header -->
            <div class="col-md-6">
                <div class="form-group">
                    <h2><small><b><%=f.label :name, "Banner Image" %></b></small></h2>
                    <% if @user.bannerpic.present? && @user.bannerpic != '' %>
                        <%= image_tag(@user.bannerpic.url.to_s, :class => "img-responsive w-75", :style => "height:150px;")%> <br>
                    <% else %>
                        <%= image_tag("profile_banner.png", :class => "img-responsive w-75", :style => "height:150px;")%> <br>
                    <% end %>
                    <%= f.file_field :bannerpic, :class => "pt-4" %>
                    <p class="help-block"><small>1500px * 300px is best</small></p>
                </div>
            </div>
        </div>


        <!-- Name -->
        <div class="form-group">
            <div>
                <h2><small><b><%= f.label :name, "Name" %></b></small></h2>
            </div>
            <%= f.text_field :name, maxlength: 50, :type => "name", :class => "form-control", :style=> "background: #DCDCDC",placeholder: "This could be your name or your organization's name" %>
        </div>

        <!-- About You -->
        <div class="form-group">
            <div>
                <h2><small><b><%=f.label :name, "About you" %></b></small></h2>
            </div>
            <%= f.text_area :about,maxlength: 1000, placeholder: 'Tell us a little about yourself and your aspirations', :class => "form-control",  :style=> "background: #DCDCDC" %>
        </div>

        <!-- Three Topics -->
        <div class="form-group">
            <h2><small><b><%=f.label :name, "What Skills or Interest best define you?" %></b></small></h2>
            <p>Some example are: front-end development, AI, wildlife protection, etc.</p>
            <%= f.text_field :genre1, maxlength: 30, :class => "form-control",  :style=> "background: #DCDCDC", placeholder: "Inrerest/Skill" %>
            <%= f.text_field :genre2, :class => "form-control", :style=> "background: #DCDCDC", placeholder: "Inrerest/Skill" %>
            <%= f.text_field :genre3, :class => "form-control", :style=> "background: #DCDCDC", placeholder: "Inrerest/Skill" %>

        </div>
        <br />

        <!-- Cancel and Save Buttons -->
        <%= link_to 'Cancel', user_profile_path, :class => "btn btn-lg text-primary border-primary mr-3"%>
        <%= f.submit "Save Changes", :class => "btn btn-lg btn-primary" %>


    </div>
</div>

<% end %>

<!-- This error detection may need to be moved into dashboardbox.-->
<div id="userlist">
    <%= form_for(@user, :html => { :multipart => true }) do |f| %>
    <% if @user.errors.any? %>
    <div id="error_explanation">
        <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
</div>
<% end %>

